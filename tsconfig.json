{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./lib",
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}